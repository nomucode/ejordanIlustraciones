---
// src/pages/obras.astro
import Layout from "../layouts/Layout.astro";
import ObraPreview from "../components/ObraPreview.astro";

const todasLasObras = [
  {
    id: 1,
    slug: "seres-mitologicos",
    titulo: "Seres Mitológicos",
    imagenSrc:
      "https://www.kinlorente.com/cdn/shop/files/855a4520-b5d2-11ef-8271-ab42ca0e46e8.jpg?v=1733754189&width=990",
  },
  {
    id: 2,
    slug: "retratos-botanicos",
    titulo: "Retratos Botánicos",
    imagenSrc:
      "https://images.unsplash.com/photo-1501901609772-df0848060b33?q=80&w=1887",
  },
];
---

<Layout>
  <div class="p-4 md:p-8">
    <h1 class="text-5xl font-bold text-center mb-12">Obras</h1>

    {
      todasLasObras.map((obra) => (
        <ObraPreview
          titulo={obra.titulo}
          imagenSrc={obra.imagenSrc}
          slug={obra.slug}
        />
      ))
    }
  </div>
</Layout>
