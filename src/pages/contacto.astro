---
// src/pages/contacto.astro
import Layout from "../layouts/Layout.astro";
import { getPageInfo } from "../lib/wp";
const { title, content } = await getPageInfo("contacto");
---

<Layout>
  <div class="max-w-3xl mx-auto px-4 py-16 md:py-24 text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-zinc-900 mb-4">{title}</h1>

    <div
      class="text-lg text-zinc-600 max-w-xl mx-auto mb-12"
      set:html={content}
    />

    <div class="space-y-8">
      <div>
        <h2 class="text-sm uppercase tracking-widest text-zinc-500 mb-2">
          Email
        </h2>
        <a
          href="mailto:beatriz.estebanez@email.com"
          class="text-xl md:text-2xl text-pink-600 hover:underline"
        >
          beatriz.estebanez@email.com
        </a>
      </div>

      <div>
        <h2 class="text-sm uppercase tracking-widest text-zinc-500 mb-3">
          SÃ­gueme
        </h2>
        <a
          href="https://instagram.com/usuario_de_beatriz"
          target="_blank"
          class="inline-block bg-zinc-900 text-white font-bold py-3 px-8 rounded-lg hover:bg-pink-600 transition-colors duration-300"
        >
          Ver perfil de Instagram
        </a>
      </div>
    </div>
  </div>
</Layout>
