---
// src/pages/obras/[slug].astro
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const todasLasObras = [
    {
      id: 1,
      slug: "seres-mitologicos",
      titulo: "Seres Mitológicos",
      imagenSrc:
        "https://www.kinlorente.com/cdn/shop/files/855a4520-b5d2-11ef-8271-ab42ca0e46e8.jpg?v=1733754189&width=990",
      descripcion:
        "Una exploración visual de criaturas legendarias a través de técnicas mixtas digitales.",
      ano: 2024,
    },
    {
      id: 2,
      slug: "retratos-botanicos",
      titulo: "Retratos Botánicos",
      imagenSrc:
        "https://images.unsplash.com/photo-1501901609772-df0848060b33?q=80&w=1887",
      descripcion:
        "Esta serie celebra la delicadeza y la complejidad del mundo vegetal.",
      ano: 2023,
    },
  ];

  return todasLasObras.map((obra) => ({
    params: { slug: obra.slug },
    props: { obra },
  }));
}

const { obra } = Astro.props;
---

<Layout
  title={`${obra.titulo} | Beatriz Estebanez Jordan`}
  description={obra.descripcion}
>
  <div class="max-w-6xl mx-auto px-4 py-8 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-5 md:gap-12">
      <div class="md:col-span-3 mb-8 md:mb-0">
        <img
          src={obra.imagenSrc}
          alt={`Ilustración: ${obra.titulo}`}
          class="rounded-lg shadow-2xl w-full h-auto object-cover"
        />
      </div>

      <div class="md:col-span-2">
        <h1 class="text-4xl md:text-5xl font-bold text-zinc-900 mb-4">
          {obra.titulo}
        </h1>

        <p class="text-lg text-zinc-700 leading-relaxed mb-6">
          {obra.descripcion}
        </p>

        <div>
          <h2 class="text-sm uppercase tracking-widest text-zinc-500 mb-2">
            Año
          </h2>
          <p class="text-xl text-zinc-800">{obra.ano}</p>
        </div>

        <div class="mt-8">
          <a href="/obras" class="text-pink-600 hover:underline">
            &larr; Volver a la galeria
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
