---
import Layout from "../layouts/Layout.astro";
import { getHomePage } from "../lib/wp-graphql";

const { hero, manifiesto, queHago, cierre, galeria, imagenDePortada } =
  await getHomePage();
---

<Layout>
  <div class="min-h-screen flex flex-col items-center justify-center -mt-24">
    <h1 class="text-4xl md:text-6xl font-bold">{hero.titulo}</h1>
    <div class="text-xl text-zinc-600 mt-2" set:html={hero.subtitulo} />
  </div>
</Layout>
