---
import Layout from "../layouts/Layout.astro";
import { getPageInfo } from "../lib/wp";

const { title, content, featuredImageUrl } = await getPageInfo("triz-jordan");
---

<Layout title="Portfolio">
  <div
    class="min-h-screen flex items-center justify-center p-4 md:p-8 -mt-24"
  >
    <div
      class="flex flex-col md:flex-row items-center justify-center gap-8 max-w-5xl w-full"
    >
      <div
        class="md:w-1/2 text-center md:text-left animate-fade-in-up"
        style="animation-delay: 200ms;"
      >
        <h1
          class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-secondary to-accent text-transparent bg-clip-text"
        >
          {title}
        </h1>
        <div
          class="text-xl text-zinc-700 mt-4 opacity-60"
          set:html={content}
        />
      </div>

      <div
        class="md:w-1/2 relative flex justify-center items-center animate-fade-in-scale"
        style="animation-delay: 800ms;"
      >
        <div class="relative w-100 rounded-full overflow-hidden shadow-xl">
          <img
            src={featuredImageUrl}
            alt="IlustraciÃ³n de Triz Jordan"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-scale {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes spin-slow-reverse {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-360deg);
    }
  }

  .animate-fade-in-up {
    animation-name: fade-in-up;
    animation-duration: 0.8s;
    animation-fill-mode: forwards;
    opacity: 0;
  }

  .animate-fade-in-scale {
    animation-name: fade-in-scale;
    animation-duration: 0.8s;
    animation-fill-mode: forwards;
    opacity: 0;
  }

  .animate-spin-slow-reverse {
    animation-name: spin-slow-reverse;
    animation-duration: 40s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }
</style>
