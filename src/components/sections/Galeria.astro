---
import CtaButton from "../CtaButton.astro";

// src/components/sections/Galeria.astro
const { titulo, texto, cta, backgroundImage } = Astro.props;
const imageUrl = backgroundImage?.node?.sourceUrl;
---

{/* ‚úÖ CAMBIOS APLICADOS AQU√ç */}
<section
  class="relative py-16 md:py-24 bg-cover bg-center before:absolute before:inset-0 before:bg-white before:opacity-75"
  style={imageUrl ? { backgroundImage: `url(${imageUrl})` } : {}}
>
  {/* Y AQU√ç üëá */}
  <div class="relative z-10 max-w-4xl mx-auto px-4 text-center">
    <div class="animate-on-scroll" data-delay="200">
      <h2
        class="text-3xl md:text-4xl font-bold font-subheading text-primary mb-4"
      >
        {titulo}
      </h2>
      <p class="text-lg text-zinc-600 mb-8">
        {texto}
      </p>
    </div>

    <div class="animate-on-scroll" data-delay="600">
      <CtaButton
        href={cta.enlace.url}
        target={cta.enlace.target}
        title={cta.enlace.title}
      >
        {cta.texto}
      </CtaButton>
    </div>
  </div>
</section>
