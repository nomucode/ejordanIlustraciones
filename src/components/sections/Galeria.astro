---
import CtaButton from "../CtaButton.astro";

// src/components/sections/Galeria.astro
const { titulo, texto, cta } = Astro.props;
---

<section class="py-16 md:py-24 bg-gradient-to-br from-gray-50 to-accent/20">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <div class="animate-on-scroll" data-delay="200">
      <h2
        class="text-3xl md:text-4xl font-bold font-subheading text-primary mb-4"
      >
        {titulo}
      </h2>
      <p class="text-lg text-zinc-600 mb-8">
        {texto}
      </p>
    </div>

    <div class="animate-on-scroll" data-delay="600">
      <CtaButton
        href={cta.enlace.url}
        target={cta.enlace.target}
        title={cta.enlace.title}
      >
        {cta.texto}
      </CtaButton>
    </div>
  </div>
</section>
