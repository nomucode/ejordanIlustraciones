---
// src/components/sections/Hero.astro
import { Image } from "astro:assets";

const { titulo, subtitulo, textoIntro, cta, imagenDePortada, featuredImage } =
  Astro.props;
---

<section

  class="min-h-screen flex items-center justify-center p-4 md:p-8 relative overflow-hidden"
>
  {
    featuredImage && (
      <div class="absolute inset-0 z-0 opacity-20 mask-leaf" data-parallax>
               {" "}
        <img
          src={featuredImage.node.sourceUrl}
          alt={featuredImage.node.altText}
          class="w-full h-full object-cover"
        />
             {" "}
      </div>
    )
  }

  <div


    class="relative z-10 flex flex-col md:flex-row items-center justify-center gap-x-12 max-w-6xl w-full"

  >
    <div



      class="md:w-1/2 text-center md:text-left animate-on-scroll"



      data-delay="200"


    >
      <h1




        class="font-heading text-4xl md:text-6xl font-bold bg-gradient-to-r from-secondary to-accent text-transparent bg-clip-text mb-4"



      >
        {titulo}
      </h1>
      <div class="text-xl text-zinc-700 mt-4 opacity-80" set:html={subtitulo} />
      <p class="mt-6 text-lg text-zinc-600 leading-relaxed">{textoIntro}</p>

      {
        cta && cta.enlace && (
          <a
            href={cta.enlace}
            class="inline-block mt-8 px-8 py-3 bg-primary text-white font-bold rounded-full shadow-lg hover:bg-transparent hover:text-primary border-2 border-primary transition-colors duration-300 animate-on-scroll"
            data-delay="400"
          >
                        {cta.texto}         {" "}
          </a>
        )
      }
    </div>

    <div



      class="md:w-1/2 flex justify-center items-center mt-12 md:mt-0 animate-on-scroll"



      data-delay="200"


    >
      <div




        class="relative w-80 h-80 md:w-96 md:h-96 rounded-full overflow-hidden shadow-2xl"



      >
        <Image





          src={imagenDePortada.node.sourceUrl}





          alt={imagenDePortada.node.altText}





          width={500}





          height={500}





          format="webp"





          quality={80}





          class="w-full h-full object-cover"




        />
      </div>
    </div>
  </div>
</section>
