---
// src/components/sections/QueHago.astro
const { titulo, introduccion, bloques } = Astro.props;
const trigonos = {
  fuego: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-12 h-12 text-secondary mx-auto mb-4"><path d="M12 2L2 22h20L12 2z"/></svg>`,
  tierra: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-12 h-12 text-secondary mx-auto mb-4"><path d="M12 22L22 2H2L12 22z"/><path d="M2 17h20"/></svg>`,
  aire: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-12 h-12 text-secondary mx-auto mb-4"><path d="M12 2L2 22h20L12 2z"/><path d="M12 12l10 10m-10 0L2 12"/></svg>`,
  agua: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-12 h-12 text-secondary mx-auto mb-4"><path d="M12 22L22 2H2L12 22z"/><path d="M12 12L2 22m10-10L22 22"/></svg>`,
};
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-12 animate-on-scroll" data-delay="0">
      <h2
        class="text-3xl md:text-4xl font-bold font-subheading text-primary mb-4"
      >
        {titulo}
      </h2>
      <p class="text-lg text-zinc-600 max-w-3xl mx-auto">
        {introduccion}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        bloques.map((bloque, index) => {
          // Asigna un SVG diferente a cada bloque
          let svgCode = "";
          if (index === 0) svgCode = trigonos.tierra;
          if (index === 1) svgCode = trigonos.fuego;
          if (index === 2) svgCode = trigonos.aire;

          return (
            <div
              class="p-8 bg-white rounded-2xl shadow-lg border border-gray-100 animate-on-scroll"
              data-delay={100 * (index + 1)}
            >
              <div class="flex justify-center" set:html={svgCode} />
              <h3 class="text-2xl font-semibold text-secondary mb-3 text-center">
                {bloque.titulo}
              </h3>
              <div class="prose text-zinc-600" set:html={bloque.texto} />
            </div>
          );
        })
      }
    </div>
  </div>
</section>
