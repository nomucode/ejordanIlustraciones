---
// src/components/sections/QueHago.astro
const { titulo, introduccion, bloques } = Astro.props;
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2
        class="text-3xl md:text-4xl font-bold text-primary mb-4"
        data-animate="fade-up"
      >
        {titulo}
      </h2>
      <p
        class="text-lg text-zinc-600 max-w-3xl mx-auto"
        data-animate="fade-up"
        data-animate-delay="200"
      >
        {introduccion}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        bloques.map((bloque, index) => (
          <div
            class="p-8 bg-white rounded-2xl shadow-lg border border-gray-100"
            data-animate="fade-up"
            data-animate-delay={index * 200}
          >
            <h3 class="text-2xl font-semibold text-secondary mb-3">
              {bloque.titulo}
            </h3>
            <div class="prose text-zinc-600" set:html={bloque.texto} />
          </div>
        ))
      }
    </div>
  </div>
</section>
