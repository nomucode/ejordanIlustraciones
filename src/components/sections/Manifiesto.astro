---
// src/components/sections/Manifiesto.astro
const { titulo, texto, backgroundImage } = Astro.props;
---

<section class="py-16 md:py-24 bg-gray-100">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h2
      class="text-3xl md:text-4xl font-bold font-subheading text-primary mb-6 animate-on-scroll"
      data-delay="200"
    >
      {titulo}
    </h2>
    <div
      class="prose prose-xl mx-auto text-zinc-700 leading-relaxed animate-on-scroll"
      data-delay="400"
      set:html={texto}
    />
  </div>
</section>
